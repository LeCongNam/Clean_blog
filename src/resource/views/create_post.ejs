<%- include layouts/header.ejs %>
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Tạo 1 bài đăng mới</h1>
            <span class="subheading">Tạo 1 bài viết mới</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">

      
        <!-- Form tạo bài  viết  mới -->
        <form method="post" action="/create" encType="multipart/form-data" name="sentMessage" id="contactForm"
          novalidate>

          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>User Name</label>
              <input type="text" name="author" class="form-control" placeholder="Tác giả" id="name" required
                data-validation-required-message="Please enter your name.">
              <p class="help-block text-danger"></p>
            </div>
          </div>

          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Title</label>
              <input type="text" name="title" class="form-control" placeholder="Tiêu đề" id="email" required
                data-validation-required-message="Please enter your email address.">
              <p class="help-block text-danger"></p>
            </div>
          </div>

          <div class="control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
              <label>Subtitle</label>
              <input type="tel" name="subtitle" class="form-control" placeholder="Tiêu đề phụ" id="phone" required
                data-validation-required-message="Please enter your phone number.">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <br>
          <div id="success"></div>
          <!-- ckeditor -->
          <textarea name="content">Nội dung bài viết....</textarea>

          <hr>
          <input type="file" name="image"  id="image">
          <hr>
          <button type="submit" class="btn btn-primary" id="sendMessageButton">Create Post</button>
        </form>
        <!-- end form create post -->

      </div>
    </div>
  </div>
  <hr>

  

  <script>
    CKEDITOR.replace('content');
    CKEDITOR.config.autoParagraph = false;
    CKEDITOR.config.enterMode = CKEDITOR.ENTER_BR;
    CKEDITOR.config.shiftEnterMode = CKEDITOR.ENTER_P;

  </script>

  <%- include layouts/footer.ejs %>